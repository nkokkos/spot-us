<% apply_fragment ['story_new_', story] do %>
	<% div_for story, :class => "clearfix" do %>
	  <div class="featured_image">
	     <%= link_to image_tag(story.featured_image.url(:medium)), story %>
	  </div>
	  <div class="description">
	     <h3>STORY: <strong><%= link_to story.headline, story %></strong></h3>
	     <div class="dateline small quiet">
	        Posted
	        <%= story.created_at.to_s(:long_date) %>
	        by
	        <%= link_to h(story.user.full_name), profile_path(story.user) %>
	        in
	        <%= story.network.name %>
	     </div>
	     <p>
	        <%= truncate_words(strip_tags(story.extended_description), 45) if story.extended_description %>
	        <%= link_to "Read More &raquo;", story %>
	     </p>
	  </div>
	<% end %>
<%end%>
