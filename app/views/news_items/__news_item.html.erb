<% apply_fragment ['news_items_listing_', news_item] do %>
	<div class="news_item">
		<%= link_to image_tag(news_item.featured_image.url(:medium), :class => "featured_image"), news_item %>
		<h5><%= link_to news_item.headline, news_item %></h5>
		<div class="dateline">
			<%= short_date(news_item.created_at) %>
			by
			<%= link_to h(news_item.user.full_name), profile_path(news_item.user) %>
			in
			<%= news_item.network_and_category %>
		</div>  
		<div class="description">
			<%= truncate_words(strip_tags(news_item.short_description), 45) %>
			<%= link_to "Read More &raquo;", news_item %>
		</div>
	</div>
<% end %>