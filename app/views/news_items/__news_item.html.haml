.featured_image.span-220
  = link_to image_tag(news_item.featured_image.url(:medium)), news_item
.summary.span-390
  %h3
    == #{news_item.class.name.upcase}:
    %strong= link_to news_item.headline, news_item
  .dateline.small.quiet
    Posted
    = news_item.created_at.to_s(:long_date)
    by
    = link_to h(news_item.user.full_name), profile_path(news_item.user)
    in
    = news_item.network_and_category
  %p.short_description.alt-spotus
    = truncate_words(news_item.short_description, 45)
    = link_to "Read More &raquo;", news_item
    
