.box_yellow.create_a_pitch_form
  .row
    = f.label :title
    = f.text_area :title, :rows => 2
  .row
    = f.label :body
    = ckeditor_textarea("post", "body", :toolbarSet => 'Spotus', :width => '683px', :height => '200px')
  .row
    = f.label :media_embed
    = f.text_area :media_embed, :rows => 4
  .row
    = f.submit
    = link_to '&laquo; Back to my pitches', myspot_pitches_path
